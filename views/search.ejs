<div class="search-container">
  <h1 class="search-title">Search Files</h1>
  <form class="search-form" method="get" action="/search">
    <input class="search-input" type="text" name="q" value="<%= query %>" placeholder="Search files..." required>
    <button class="btn btn-primary" type="submit">Search</button>
  </form>
  <% if (query && files.length === 0) { %>
    <div class="search-empty">No results found for "<%= query %>".</div>
  <% } %>
  <ul class="search-results">
    <% files.forEach(function(file) { %>
      <li class="search-result-item">
        <a class="search-result-link" href="/files/view/<%= file %>"><%= file %></a>
      </li>
    <% }); %>
  </ul>
  <div class="search-back">
    <a class="btn btn-secondary" href="/files">&larr; Back to Files</a>
    <a class="btn btn-home" href="/">üè† Home</a>
  </div>
</div>

<style>
