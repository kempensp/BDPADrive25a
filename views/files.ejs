<div class="files-container">
  <h1 class="files-title">Your Files</h1>
  <div class="files-actions">
    <a class="btn btn-primary" href="/files/new">+ Create New File</a>
    <a class="btn btn-secondary" href="/search" style="margin-left:10px;">Search Files</a>
    <a class="btn btn-home" href="/" style="margin-left:10px;">üè† Home</a>
  </div>
  <ul class="files-list">
    <% if (files.length === 0) { %>
      <li class="files-empty">No files found.</li>
    <% } %>
    <% files.forEach(function(file) { %>
      <li class="files-item">
        <span class="files-filename"><a href="/files/view/<%= file %>"><%= file %></a></span>
        <a class="btn btn-sm btn-edit" href="/files/edit/<%= file %>">Edit</a>
      </li>
    <% }); %>
  </ul>
</div>

