  text-align: right;
  margin-bottom: 18px;
}
.btn {
  display: inline-block;
  padding: 6px 16px;
  border-radius: 4px;
  text-decoration: none;
  font-size: 1rem;
  transition: background 0.2s;
}
.btn-primary {
  background: #007bff;
  color: #fff;
}
.btn-primary:hover {
  background: #0056b3;
}
.btn-secondary {
  background: #f0f0f0;
  color: #333;
}
.btn-secondary:hover {
  background: #e0e0e0;
}
.btn-home {
  background: #28a745;
  color: #fff;
}
.btn-home:hover {
  background: #218838;
}
.files-list {
  list-style: none;
  padding: 0;
}
.files-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}
.files-filename a {
  color: #007bff;
  text-decoration: none;
